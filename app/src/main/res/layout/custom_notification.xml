<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="9dp"
        android:gravity="left"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="3dp"
        android:layout_width="50dp"
        android:id="@+id/smiley1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/smiley1" />
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:id="@+id/smiley2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smiley2" />
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/smiley3"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smiley3" />
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:id="@+id/smiley4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smiley4" />
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/smiley5"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smiley5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="not at all"
        android:textColor="#111111"
        android:paddingTop="3dp"
        android:fontFamily="@font/monsterrat"
        android:layout_margin="4dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textSize="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="has today's session empowered kid"
            android:textColor="#111111"
            android:paddingTop="3dp"
            android:fontFamily="@font/monsterrat"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textSize="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="extremely"
            android:textColor="#111111"
            android:paddingTop="3dp"
            android:fontFamily="@font/monsterrat"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textSize="13dp" />
    </LinearLayout>
<!--    <EditText-->
<!--        android:id="@+id/edit_text"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp"-->
<!--        android:inputType="text|textMultiLine" />-->
    <ImageButton
        android:id="@+id/submit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="18dp"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/tick" />
</LinearLayout>